<div class = "row">
<div class = "col-12">
<form id="newBurger">
  <h3><strong>Add your own burger!</strong></h3>
  <div class="form-group">
    <label for="burgerInput">Enter Your Burger's Name:</label>
    <input type="text" class="form-control" id="burgerInput" placeholder="Animal-Style Triple Double">
    <button type="submit" class="btn btn-primary">Submit</button> 
  </div>
  
 </form>
</div>
</div>
<br>
<div class = "row">
<div class = "col-6" id = "uneaten">
<h3><strong>Burgers to eat!</strong></h3>
<ul class = "list-group">
{{#each burgers}}
{{#unless devoured}}
<li class = "list-group-item bg-secondary">
<strong>{{burger_name}}</strong>
<button class = "btn devour float-right bg-warning" data-id = {{id}}><strong>Devour Me!</strong></button>
</li>
{{/unless}}
{{/each}}
</ul>
</div>

<div class = "col-6" id = "eaten">
<h3><strong>Burgers you ate!</strong></h3>
<ul class = "list-group">
{{#each burgers}}
{{#if devoured}}
<li class = "list-group-item bg-secondary">
<strong>{{burger_name}}</strong>
<button class = "btn delete float-right bg-danger" data-id = {{id}}><strong>Delete</strong></button>
</li>
{{/if}}
{{/each}}
</ul>
</div>
</div>